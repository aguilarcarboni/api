{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LaserFocus API Schema",
    "description": "API schema for the LaserFocus application",
    "type": "object",
    "properties": {
      "endpoints": {
        "type": "object",
        "properties": {
          "drive": {
            "type": "object",
            "description": "Endpoints for drive-related operations",
            "properties": {
              "query_files": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/drive/query_files" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "path": { "type": "string" }
                    },
                    "required": ["path"]
                  }
                }
              },
              "query_file": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/drive/query_file" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "path": { "type": "string" },
                      "file_name": { "type": "string" }
                    },
                    "required": ["path", "file_name"]
                  }
                }
              },
              "download_file": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/drive/download_file" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "file_name": { "type": "string" }
                    },
                    "required": ["file_name"]
                  }
                }
              },
              "upload_file": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/drive/upload_file" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "file": { "type": "string", "format": "binary" },
                      "parent_folder_id": { "type": "string" }
                    },
                    "required": ["file"]
                  }
                }
              },
              "delete_file": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/drive/delete_file" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "file_ids": { 
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    },
                    "required": ["file_ids"]
                  }
                }
              },
              "create_folder": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/drive/create_folder" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "folder_name": { "type": "string" },
                      "parent_folder_id": { "type": "string" }
                    },
                    "required": ["folder_name", "parent_folder_id"]
                  }
                }
              }
            }
          },
          "database": {
            "type": "object",
            "description": "Endpoints for database operations",
            "properties": {
              "create": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/database/create" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "table": { "type": "string" },
                      "data": { "type": "object" }
                    },
                    "required": ["table", "data"]
                  }
                }
              },
              "read": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/database/read" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "table": { "type": "string" },
                      "params": { "type": "object" }
                    },
                    "required": ["table", "params"]
                  }
                }
              },
              "update": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/database/update" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "table": { "type": "string" },
                      "params": { "type": "object" },
                      "data": { "type": "object" }
                    },
                    "required": ["table", "params", "data"]
                  }
                }
              },
              "delete": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/database/delete" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "table": { "type": "string" },
                      "params": { "type": "object" }
                    },
                    "required": ["table", "params"]
                  }
                }
              },
              "get_foreign_keys": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/database/get_foreign_keys" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "table": { "type": "string" },
                      "params": { "type": "object" }
                    },
                    "required": ["table", "params"]
                  }
                }
              },
              "get_parent_lineage": {
                "type": "object",
                "properties": {
                  "path": { "type": "string", "const": "/database/get_parent_lineage" },
                  "method": { "type": "string", "const": "POST" },
                  "request": {
                    "type": "object",
                    "properties": {
                      "table": { "type": "string" },
                      "params": { "type": "object" },
                      "depth": { "type": "integer", "minimum": 1, "maximum": 10, "default": 3 }
                    },
                    "required": ["table", "params"]
                  }
                }
              }
            }
          }
        }
      },
      "response_format": {
        "type": "object",
        "description": "Standard response format for all endpoints",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["success", "error"]
          },
          "content": {
            "type": "object"
          }
          
        },
        "required": ["status", "content"]
      }
    }
  }